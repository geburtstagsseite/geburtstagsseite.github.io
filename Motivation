<script type="text/javascript">
function searchKeyPress(e)
{
    e = e || window.event;
    if (e.keyCode == 13)
    {
        document.getElementById('Knopf').click();
        return false;
    }
    return true;
}

</script>

<script language="javascript">
function check(form)
{
 if(form.vname.value == "Doug" && form.nname.value == "Hughes")
  {
	document.getElementById('richtig').style="visibility:visible";
  }
 else if(form.vname.value == "doug" && form.nname.value == "hughes")
  {
	document.getElementById('richtig').style="visibility:visible";
  }
  else if(form.vname.value == "Doug " && form.nname.value == "Hughes")
  {
	document.getElementById('richtig').style="visibility:visible";
  }
  else if(form.vname.value == "doug " && form.nname.value == "Hughes")
  {
	document.getElementById('richtig').style="visibility:visible";
  }
 else
 {
   alert("Versuchs noch mal!")
  }
}
</script>
